<!--
This form is to add the readings - min and max is about the limits
-->
<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="000" type="number" step="100" min="100" max="800" name="code">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00.0C" type="number" step=".01" min="-273.15" name="temp">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00.00kMh" type="number" step=".01" min="1" max="117"  name="wind_speed">
    </div>

  <div class="field">
    <label>Wind Direction</label>
    <input placeholder="000deg" type="number" step=".01" min="1" max="350"  name="wind_dir">
  </div>

  <div class="field">
    <label>Pressure</label>
    <input placeholder="000hPa" type="number" step=".01" min="1" max="10000"  name="pressure">
  </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>

<form class="ui stacked segment form" action="/station/{{station.id}}/generatereading" method="POST">
    <div class="field">

      <button class="ui red submit button">Auto Generate Reading</button>
    </div>
</form>
